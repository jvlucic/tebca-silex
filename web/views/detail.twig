{% extends 'base.twig' %}

{% block content %}
    <hr class="lineseparator" style="clear: both">

    <div class="btn-group twobutton">
        <a href="/dashboard" style="border: 0px;margin: 0px;padding: 0px;" class="btn twobutton"> 
            <button   class="btn onebutton" >Inicio</button>
        </a>
        <a href="/login" style="border: 0px;margin: 0px;padding: 0px;"  class="btn twobutton"> 
            <button  class="btn onebutton" >Salir</button>
        </a>
    </div>
    
    <hr class="lineseparator" style="clear: both">
    <div class="userContent"> 
        Bienvenid@ {{user.nombreCliente}}
    </div>
    <hr class="lineseparator">
    <div class="cardContainer" > 
        {% if user.hasPrincipales is not empty %}
            <ul class="cardInfo">
                <li class="pre_{{card.prefix ~ '_' ~ user.org}}">
                    <div class="cardName">Saldo Disponible: {{card.saldoDisponible}}</div>
                    <div class="cardInfo">{{card.mask}}</div>

                </li>
            </ul>        
            <div class="movementContainer" >
                &Uacute;ltimos Movimientos
            </div>

        {% endif %}   

        {% for movement in card.movimientos %}
            <ul class="cardList">
                <li class="movement">
                    <div>{{movement.concepto}}</div>
                    <div class="{{movement.tipo}}">{{movement.monto}}</div>
                    <div>{{movement.fecha}}</div>
                </li>
            </ul>
        {% endfor %}


    </div>

{%endblock%}